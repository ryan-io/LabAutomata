<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:LabAutomata.controls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewmodel="clr-namespace:LabAutomata.Wpf.Library.viewmodel;assembly=LabAutomata.Wpf.Library"
             x:Class="LabAutomata.view.WorkRequestContent"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewmodel:WorkRequestContentVm}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <controls:FocusedViewHeader HeaderText="Work Requests List"/>
        <Border Grid.Row="1"
                Margin="5 0 5 0"
                Background="{StaticResource FgTwo}">
            <ui:DataGrid ItemsSource="{Binding WorkRequests,Mode=TwoWay}"/>
        </Border>
    </Grid>
</UserControl>
