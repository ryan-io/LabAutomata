<UserControl x:Class="LabAutomata.controls.FormTextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:LabAutomata.controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <controls:TextBoxTwoText
             Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=InputTxt, UpdateSourceTrigger=PropertyChanged}"
             BoxEmptyText="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=BoxEmptyTxt, UpdateSourceTrigger=PropertyChanged}"
             HorizontalContentAlignment="Stretch"
             Margin="5"
             Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Width}"
             Style="{StaticResource TxtBoxTwoTextStyle}"
             VerticalAlignment="Center"
             FontSize="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=FontSize}" />
</UserControl>