<UserControl x:Class="LabAutomata.controls.FormTextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:control="clr-namespace:LabAutomata.Wpf.Library.control;assembly=LabAutomata.Wpf.Library"
             mc:Ignorable="d" 
             x:Name="FormInput"
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=InputTxt, UpdateSourceTrigger=PropertyChanged}"
             HorizontalContentAlignment="Stretch"
             Margin="5"
             Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Width}"
             Style="{StaticResource TxtBoxDefault}"
             VerticalAlignment="Center"
             FontSize="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=FontSize}"/>
</UserControl>
