<UserControl x:Class="LabAutomata.controls.ContentCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LabAutomata.controls"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <mat:Card>
        <ContentControl  Content="{Binding RelativeSource={RelativeSource AncestorType=local:ContentCard}, Path=CardContent}"
                         Margin="3">
        </ContentControl>
    </mat:Card>
</UserControl>