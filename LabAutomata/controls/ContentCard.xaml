<UserControl x:Class="LabAutomata.controls.ContentCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabAutomata.controls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ui:Card  Padding="0"
              Margin="15 0 15 2"
              Background="{StaticResource FgTwo}"
              BorderBrush="{StaticResource FgOne}"
              BorderThickness="1">
        <ContentControl  Content="{Binding RelativeSource={RelativeSource AncestorType=local:ContentCard}, Path=CardContent}"
                         Foreground="{StaticResource FgOne}"
                         Margin="3">
        </ContentControl>
    </ui:Card>
</UserControl>
