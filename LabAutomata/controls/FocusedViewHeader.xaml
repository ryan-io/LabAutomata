<UserControl x:Class="LabAutomata.controls.FocusedViewHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Name="Header"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="{StaticResource CornerRadius}"
            Background="{StaticResource FgOne}"
            Margin="0 0 0 10">
        <TextBlock Text="{Binding ElementName=Header, Path=HeaderText}"
                   Foreground="{StaticResource FontOne}"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="10 10 0 10" />
    </Border>
</UserControl>