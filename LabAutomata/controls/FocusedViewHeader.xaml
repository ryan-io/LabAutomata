<UserControl x:Class="LabAutomata.controls.FocusedViewHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             x:Name="Header"
             d:DesignHeight="450" d:DesignWidth="800">
    <mat:Card  Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
               mat:ShadowAssist.Darken="True">
        <TextBlock Text="{Binding ElementName=Header, Path=HeaderText}"
                   FontFamily="{DynamicResource MaterialDesignFont}"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   FontSize="26"
                   HorizontalAlignment="Left"
                   Margin="10 10 0 10" />
    </mat:Card>
</UserControl>