<Window x:Class="LabAutomata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:LabAutomata.view"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="450" Width="800">
    <Border Background="{StaticResource Bg}"
            CornerRadius="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="10, 10 10 0" 
                        Background="{StaticResource Fg}">
                <Image Source="resources/images/lab-automata-logo-transparent.png"/>
            </StackPanel>
            <StackPanel Grid.Column="0"
                        Grid.Row="1"
                        Margin="10 10 10 0"
                        Background="{StaticResource  Fg}">
                <TextBlock x:Name="DbgTxtBlk" 
                           Text="Welcome to our main app!"
                           Foreground="AntiqueWhite"/>
                <RadioButton
                    Content="Test"
                    Height="50"
                    FontSize="28"
                    Style="{StaticResource MenuBtn}"
                    Click="RunWork"/>

                <RadioButton
                    Content="Home"
                    Height="50"
                    FontSize="14"
                    Style="{StaticResource MenuBtn}"
                    Click="RunWork"/>

                <RadioButton
                    Content="New Test"
                    Height="50"
                    FontSize="14"
                    Style="{StaticResource MenuBtn}"
                    Click="RunWork"/>
            </StackPanel>

            <StackPanel Grid.Row="0" 
                        Grid.Column="1"
                        Margin="0 10 10 0"
                        Background="{StaticResource Fg}">
                <TextBox 
                     Height="50"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Margin="5" 
                     Style="{StaticResource TxtBoxDefault}"/>
            </StackPanel>

            <StackPanel Grid.Row="1" 
                        Grid.Column="1"
                        Background="{StaticResource Fg}"
                        Margin="0 10 10 0">
                <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10">
                    <v:HomeView/>
                </ContentControl>

            </StackPanel>
            <StackPanel Grid.Row="2" 
                        Grid.Column="0"
                            Grid.ColumnSpan="2" 
                            Margin="10"
                            Background="{StaticResource Fg}"></StackPanel>
        </Grid>
    </Border>
</Window>
