<Window x:Class="LabAutomata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:LabAutomata.view"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="900" Width="800">
    <Window.Resources>
        <CornerRadius x:Key="CornerRadius">10</CornerRadius>
    </Window.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" 
                    BorderThickness="0"
                    CornerRadius="{StaticResource CornerRadius}"
                    Margin="10"
                    Background="{StaticResource FgTwo}">

                <StackPanel Margin="10, 10 10 10" 
                        Background="{StaticResource FgOne}">
                <Image Source="resources/images/lab-automata-logo-transparent.png">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding DragWindow}"/>
                    </Image.InputBindings>
                </Image>
                </StackPanel>
            </Border>

            <Border Grid.Column="0"
                    Grid.Row="2"
                    BorderThickness="0"
                    CornerRadius="{StaticResource CornerRadius}"
                    Margin="10"
                    Background="{StaticResource FgTwo}">
                <StackPanel 
                        Margin="10"
                        Background="{StaticResource  FgOne}">
                    <TextBlock x:Name="DbgTxtBlk" 
                           Text="Welcome to our main app!"
                           Foreground="AntiqueWhite"/>
                    <RadioButton Content="Home"
                             Height="40"
                             FontSize="22"
                             FontWeight="Bold"
                             IsChecked="true"
                             Style="{StaticResource MenuBtn}"/>
                    <RadioButton Content="Work Requests"
                             FontWeight="Bold"
                             Height="40"
                             FontSize="22"
                             Style="{StaticResource MenuBtn}"/>
                    <RadioButton Content="Create Work Request"
                             Height="40"
                             FontWeight="Bold"
                             FontSize="22"
                             Style="{StaticResource MenuBtn}"/>
                    <RadioButton Content="Workstations"
                             Height="40"
                             FontWeight="Bold"
                             FontSize="22"
                             Style="{StaticResource MenuBtn}"/>
                    <RadioButton Content="Equipment Items"
                             Height="40"
                             FontWeight="Bold"
                             FontSize="22"
                             Style="{StaticResource MenuBtn}"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" 
                    BorderThickness="0"
                    CornerRadius="{StaticResource CornerRadius}"
                    Grid.Column="1"
                    Margin="0 10 10 0"
                    Background="{StaticResource FgTwo}">

                <StackPanel >
                    <TextBox 
                     Height="50"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Margin="5" 
                     Style="{StaticResource TxtBoxDefault}">
                    </TextBox>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" 
                    Grid.Column="1"
                    BorderThickness="0"
                    CornerRadius="{StaticResource CornerRadius}"
                    Margin="10"
                    Background="{StaticResource FgTwo}">
                <StackPanel 
                        Background="{StaticResource FgTwo}"
                        Margin="0 10 10 0">
                    <ContentControl Margin="10">
                        <v:HomeView/>
                    </ContentControl>
                </StackPanel>
            </Border>

            <Border  Grid.Row="3" 
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     BorderThickness="0"
                     CornerRadius="{StaticResource CornerRadius}"
                     Margin="10"
                     Background="{StaticResource FgTwo}">
                <StackPanel
                            Grid.ColumnSpan="2" 
                            Margin="10"
                            Background="LightSlateGray"></StackPanel>
            </Border>

            <StackPanel Grid.Column="0"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Background="{StaticResource FgOne}">
                <TextBlock Foreground="{StaticResource FontOne}" 
                           HorizontalAlignment="Right"
                           Text=" Copyright 2024 Ryan IO. All rights reserved."/>
            </StackPanel>
        </Grid>
</Window>