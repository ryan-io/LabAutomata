<Window x:Class="LabAutomata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:LabAutomata.view"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Lab Automata" Height="900" Width="800" 
        Loaded="OnLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" 
                Grid.Column="0"
                BorderThickness="0"
                CornerRadius="{StaticResource CornerRadius}"
                Margin="10"
                Background="{StaticResource FgTwo}">
            <StackPanel Margin="10, 10 10 10" 
                        Background="{StaticResource FgOne}">
                <Image Source="resources/images/lab-automata-logo-transparent.png" 
                       MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown">
                </Image>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" 
                BorderThickness="0"
                CornerRadius="{StaticResource CornerRadius}"
                Grid.Column="1"
                Margin="10 10 10 10"
                Background="{StaticResource FgTwo}">

            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBox Height="50"
                         VerticalContentAlignment="Top"
                         Margin="10 10 10 10" 
                         Style="{StaticResource TxtBoxDefault}">
                </TextBox>
                <Border Grid.Row="2"
                        x:Name="NavBorder"
                        CornerRadius="{StaticResource CornerRadius}"
                        Margin="10"
                        Background="{StaticResource FgOne}">
                    <Grid MinWidth="1000"
                          Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Home" 
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource FontOne}"/>
                            <Image Source="resources/images/home.png" 
                                   Margin="10"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Height="128" Width="128"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Vertical">
                            <TextBlock Text="Work Requests"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource FontOne}"/>
                            <Image Source="resources/images/work-requests.png" 
                                   Margin="10"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Height="128" Width="128"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2"
                                    Orientation="Vertical">
                            <TextBlock Text="Create Request"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource FontOne}"/>
                            <Image Source="resources/images/create-work-request.png" 
                                   Margin="10"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Height="128" Width="128"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" 
                                    Orientation="Vertical">
                            <TextBlock Text="Workstations"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource FontOne}"/>
                            <Image Source="resources/images/workstations.png" 
                                   Margin="10"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Height="128" Width="128"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" 
                                    Orientation="Vertical">
                            <TextBlock Text="Equipment"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource FontOne}"/>
                            <Image Source="resources/images/equipment-items.png" 
                                   Margin="10"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Height="128" Width="128"/>
                        </StackPanel>

                        <StackPanel Grid.Column="5" 
                                    Orientation="Vertical">
                            <TextBlock Text="About"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource FontOne}"/>
                            <Image Source="resources/images/help-about.png" 
                                   Margin="10"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Height="128" Width="128"/>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Border>

        <ContentControl Grid.Row="2" 
                        Grid.Column="0" 
                        Content="{Binding NavVm}"/>

        <Border Grid.Row="2" 
                Grid.Column="1"
                BorderThickness="0"
                CornerRadius="{StaticResource CornerRadius}"
                Margin="10"
                Background="{StaticResource FgTwo}">
            <StackPanel Background="{StaticResource FgTwo}"
                        Margin="10 10 10 0">
                <ContentControl Margin="10"
                                Content="{Binding FocusedVm}"/>
            </StackPanel>
        </Border>

        <Border  Grid.Row="3" 
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 BorderThickness="0"
                 CornerRadius="{StaticResource CornerRadius}"
                 Margin="10"
                 Background="{StaticResource FgTwo}">
            <StackPanel Margin="10"
                        Background="LightSlateGray">
                <ContentControl Margin="10"
                                Content="{Binding SubFocusedVm}"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="0"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Background="{StaticResource FgOne}">
            <TextBlock Foreground="{StaticResource FontOne}" 
                           HorizontalAlignment="Right"
                           Text=" Copyright 2024 Ryan IO. All rights reserved."/>
        </StackPanel>
    </Grid>
</Window>